<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.courses.bogdan.tema3.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_centerInParent="true" />
    <Button
        android:text="Activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityChanger"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:text="Activity3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thirdActivity"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activityChanger"
        />

    <Button
        android:text="ActivityMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapsActivity"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/thirdActivity"
        />

</RelativeLayout>
